<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_1Activity"
    android:background="@drawable/back">

    <Button
        android:id="@+id/reg_student"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_student_black_24dp"
        android:text="Регистрация студентов"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/sp_student"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_spisok_black_24dp"
        android:text="Список студентов"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/reg_teacher"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_student_black_24dp"
        android:text="Регистрация учителей"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/sp_teacher"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_spisok_black_24dp"
        android:text="Список учителей"
        android:textSize="12dp" />

    <Button
        android:id="@+id/reg_lesson"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_lesson_black_24dp"
        android:text="Регистрация уроков"
        android:textSize="12dp" />

    <Button
        android:id="@+id/sp_lesson"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_lessons_sp_black_24dp"
        android:text="Список уроков"
        android:textSize="12dp" />


</GridLayout>